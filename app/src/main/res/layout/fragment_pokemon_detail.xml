<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/dexScroll"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/notesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textview_border"
            android:padding="5dp"
            android:text="@string/notes"
            android:visibility="gone"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/previousIv"
                android:layout_width="40dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@android:drawable/btn_star"/>

        <TextView
                android:id="@+id/name_dexTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <ImageView
                android:id="@+id/nextIv"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@android:drawable/btn_star"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="10dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/pokeDrawable"
                        style="@style/PokeTextView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/imageviewContent"
                        android:padding="5dp"
                        android:paddingBottom="5dp"/>

                <ImageView
                        android:id="@+id/pokeDrawable2"
                        style="@style/PokeTextView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/imageviewContent2"
                        android:padding="5dp"
                        android:paddingBottom="5dp"/>
            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:textAppearance="?android:attr/textAppearance"
                        android:visibility="gone"/>

                <TextView
                        android:id="@+id/tvType1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_border_fight"
                        android:layout_alignParentStart="true"
                        android:layout_margin="4dp"
                        android:textAllCaps="false"
                        android:layout_width="70dp"
                        tools:text="Fighting"
                        android:layout_height="35dp"/>

                <TextView
                        android:id="@+id/tvType2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_border_fight"
                        android:layout_margin="4dp"
                        android:layout_toEndOf="@+id/tvType1"
                        android:textAllCaps="false"
                        android:layout_width="70dp"
                        tools:text="Psychic"
                        android:layout_height="35dp"/>

                <ImageButton
                        android:id="@+id/megaImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mega"
                        android:visibility="gone"/>
            </RelativeLayout>

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="5">

                <TableRow
                        android:id="@+id/moveRow0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            android:text="@string/dex_no"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"

                            android:text="@string/dex_species"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"

                            android:text="@string/dex_height"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            android:text="@string/dex_weight"

                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"

                            android:text="@string/dex_gender"
                            android:textStyle="bold"/>
                </TableRow>

                <TableRow
                        android:id="@+id/moveRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                    <TextView
                            android:id="@+id/dex_natNoTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"/>

                    <TextView
                            android:id="@+id/dex_speciesTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"/>

                    <TextView
                            android:id="@+id/height_dexTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"/>

                    <TextView
                            android:id="@+id/weight_dexTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"/>

                    <TextView
                            android:id="@+id/gender_dexTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"/>
                </TableRow>
            </TableLayout>

            <include layout="@layout/pokedex_entry_type_chart"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"

                            android:paddingEnd="15dp"
                            android:paddingStart="0dp"
                            android:text="@string/locations"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                    <ToggleButton
                            android:id="@+id/locationTbtn"
                            android:layout_width="47dp"
                            android:layout_height="50dp"
                            android:background="@drawable/check"
                            android:checked="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:scaleType="centerCrop"
                            android:textOff=""
                            android:textOn=""/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/locationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="15dp"

                                android:paddingStart="0dp"
                                android:text="@string/loc_x"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/locationXTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="15dp"

                                android:paddingStart="0dp"
                                android:text="@string/loc_y"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/locationYTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="10dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="0dp"
                            android:text="@string/descriptions"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                    <ToggleButton
                            android:id="@+id/descriptionTbtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/check"
                            android:checked="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:scaleType="centerCrop"
                            android:textOff=""
                            android:textOn=""/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/descriptionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="15dp"

                                android:paddingStart="0dp"
                                android:text="@string/desc_x"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/descriptionXTv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="15dp"

                                android:paddingStart="0dp"
                                android:text="@string/desc_y"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/descriptionYTv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                    android:id="@+id/evolutionScView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:id="@+id/babyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"/>

                    <LinearLayout
                            android:id="@+id/basicLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"/>

                    <LinearLayout
                            android:id="@+id/stage1Layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"/>

                    <LinearLayout
                            android:id="@+id/stage2Layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"/>

                    <LinearLayout
                            android:id="@+id/megaLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"/>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    tools:ignore="TooManyViews">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/base_stats"
                            android:textStyle="bold"/>

                    <be.appwise.simplifiedPokedex.ui.customViews.TextProgressBar
                            android:id="@+id/hpProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:progressDrawable="@drawable/progressbar"
                            app:textSize="14sp"/>

                    <be.appwise.simplifiedPokedex.ui.customViews.TextProgressBar
                            android:id="@+id/attProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:progressDrawable="@drawable/progressbar"
                            app:textSize="14sp"/>

                    <be.appwise.simplifiedPokedex.ui.customViews.TextProgressBar
                            android:id="@+id/defProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:progressDrawable="@drawable/progressbar"
                            app:textSize="14sp"/>

                    <be.appwise.simplifiedPokedex.ui.customViews.TextProgressBar
                            android:id="@+id/spAttProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:progressDrawable="@drawable/progressbar"
                            app:textSize="14sp"/>

                    <be.appwise.simplifiedPokedex.ui.customViews.TextProgressBar
                            android:id="@+id/spDefProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:progressDrawable="@drawable/progressbar"
                            app:textSize="14sp"/>

                    <be.appwise.simplifiedPokedex.ui.customViews.TextProgressBar
                            android:id="@+id/speedProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:max="255"

                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:progressDrawable="@drawable/progressbar"
                            app:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/abilities"
                            android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/abilitiesList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            tools:ignore="NestedScrolling"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp">

                <Button
                        android:id="@+id/moveBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border"
                        android:text="@string/moves"
                        android:visibility="gone"
                        tools:ignore="ButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>